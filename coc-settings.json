{
  "coc.preferences.useQuickfixForLocations": true,
  "suggest.noselect": false,
  "suggest.autoTrigger": "trigger",

  "languageserver": {
    "nix": {
      "command": "nixd",
      "filetypes": [
        "nix"
      ]
    },
    "swift": {
      "command": "sourcekit-lsp",
      "args": [],
      "filetypes": [
        "swift"
      ]
    },
    "rust": {
      "command": "rust-analyzer",
      "filetypes": [
        "rust"
      ],
      "rootPatterns": [
        "Cargo.toml"
      ]
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": [
        "haskell",
        "lhaskell"
      ],
      "initializationOptions": {
        "haskell": {}
      }
    },
    "ocaml": {
      "command": "ocamllsp",
      "rootPatterns": [
          "*.opam",
          "dune-project"
      ],
      "filetypes": [
        "ocaml",
      ],

    }
  }
}
