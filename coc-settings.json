{
  "coc.preferences.useQuickfixForLocations": true,
  "rust-analyzer.updates.checkOnStartup": false,
  "suggest.noselect": false,
  "suggest.autoTrigger": "trigger",
  "languageserver": {
    "nix": {
      "command": "rnix-lsp",
      "filetypes": [
        "nix"
      ]
    },
    "haskell": {
      "command": "haskell-language-server",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": [
        "haskell",
        "lhaskell"
      ],
      "initializationOptions": {
        "haskell": {}
      }
    }
  }
}
